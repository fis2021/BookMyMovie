<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="controllers.CinemaMenuController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Cinema Manager" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <HBox alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Button onAction="#handleAddMovieAction" text="Add"/>
    </HBox>

    <HBox alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button onAction="#handleDeleteMovieAction" text="Delete"/>
    </HBox>

    <HBox alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button onAction="#handleLogoutAction" text="Logout"/>
    </HBox>

</GridPane>
